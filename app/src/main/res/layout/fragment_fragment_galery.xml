<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    tools:context=".DashBoardFragment.FragmentGalery">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/filterSemua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Semua"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterPerusahaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Perusahaan"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Produk"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterBerita"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Berita"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterAgenda"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Agenda"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterPeng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Pengumuman"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterBeasis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Beasiswa"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterLoker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Loker"
                android:textColor="@color/newTulisan" />

            <Button
                android:id="@+id/filterProjek"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bground_lancip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Proyek"
                android:textColor="@color/newTulisan" />
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGaleri"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>