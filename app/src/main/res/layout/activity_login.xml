<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/background_grad"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgLogos"
            android:src="@drawable/logos"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgLogos">

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/buenard"
                android:textSize="30sp"
                android:text="LOGIN"
                android:textColor="@color/putih" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLogin"
                android:orientation="vertical"
                android:id="@+id/linear1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text"
                            android:textColor="@color/putih"
                            android:fontFamily="@string/tulisan"
                            android:textSize="15dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="15dp"
                            android:inputType="textEmailAddress"
                            android:drawableLeft="@drawable/ic_email_black_24dp"
                            android:hint="@string/prompt_email"
                            android:drawablePadding="5dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#FFF"
                        app:hintEnabled="false">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etPass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text"
                            android:inputType="textPassword"
                            android:drawableStart="@drawable/ic_lock_open_black_24dp"
                            android:drawablePadding="5dp"
                            android:textColor="@color/putih"
                            android:fontFamily="@string/tulisan"
                            android:textSize="15dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="15dp"
                            android:hint="@string/prompt_password" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/btnForget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparan"
                        android:textColor="@color/putih"
                        android:text="Lupa Password?"
                        android:fontFamily="@string/tulisan" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/linear1"
                android:layout_marginTop="50dp"
                android:text="Login"
                android:background="@drawable/button_effect"
                android:fontFamily="@string/tulisan"
                android:textColor="@color/putih"
                android:paddingRight="70dp"
                android:paddingLeft="70dp"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textAllCaps="false"
                android:id="@+id/btnLogin" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel2"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparan"
            android:text="SIGN UP"
            android:textColor="@color/putih"
            android:fontFamily="@string/tulisan"
            android:textAlignment="textStart" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparan"
            android:textColor="@color/putih"
            android:text="Back"
            android:layout_alignParentRight="true"
            android:id="@+id/btnKembali"
            android:fontFamily="@string/tulisan"
            android:textAlignment="textEnd" />
    </RelativeLayout>
</RelativeLayout>